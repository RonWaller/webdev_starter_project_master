{
  "name": "webdev_starter_project_master",
  "version": "1.0.0",
  "description": "a simple static html boilerplate with npm",
  "main": "index.html",
  "scripts": {
    "build-css": "node-sass -w source/scss/ -o build/css/ --recursive",
    "build-js": "browserify source/js/**.js > build/js/main.js",
    "build": "npm run build-css && npm run build-js",
    "start": "nodemon -e js,scss -x \"npm run build\" --ignore build/"
  },
  "author": "Ron Waller",
  "license": "MIT",
  "dependencies": {
    "node-sass": "^4.10.0"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "nodemon": "^1.18.6"
  }
}
